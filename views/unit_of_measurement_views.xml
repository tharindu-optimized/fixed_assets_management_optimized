<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- unit measurement form view   -->
    <record id='unit_measurement_form_view' model='ir.ui.view'>
        <field name="name">unit.measurement.form</field>
        <field name="model">unit.measurement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>

                            <field name="unit_of_measurement"/>

                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- unit of measurement tree view-->

    <record id='unit_measurement_tree_view' model='ir.ui.view'>
        <field name="name">unit.measurement.tree</field>
        <field name="model">unit.measurement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="unit_of_measurement"/>


            </tree>
        </field>
    </record>

    <!-- unit of measurement action -->

    <record id='unit_measurement_action' model='ir.actions.act_window'>
        <field name="name">Unit Measurement</field>
        <field name="res_model">unit.measurement</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
